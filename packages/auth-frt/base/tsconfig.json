{
        "compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"lib": ["ES2019", "DOM"],
                "jsx": "react-jsx",
                "rootDir": "src",
                "outDir": "dist",
                "declaration": true,
                "declarationDir": "dist",
                "esModuleInterop": true,
                "skipLibCheck": true,
                "strict": true,
                "moduleResolution": "bundler",
                "resolveJsonModule": true,
                "allowSyntheticDefaultImports": true
        },
        "include": ["src/**/*"],
        "exclude": ["dist", "node_modules"]
}
