{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/test"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest"]
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"]
}