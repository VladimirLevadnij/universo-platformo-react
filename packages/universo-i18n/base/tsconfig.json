{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "jsx": "react",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": ["./src/i18next.d.ts"]
    },
    "include": ["src/**/*", "src/**/*.json"]
}
