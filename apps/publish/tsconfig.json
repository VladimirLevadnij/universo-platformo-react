{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./base",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": ["*"],
            "../common/*": ["../common/*"]
        }
    },
    "include": ["base/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
