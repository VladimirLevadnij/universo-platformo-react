{
  "name": "@universo/spaces-frt",
  "version": "0.1.0",
  "description": "Frontend module for Spaces/Canvases (UI extraction)",
  "private": true,
  "keywords": ["universo", "spaces", "frontend"],
  "license": "Omsk Open License",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc -p tsconfig.json && tsc -p tsconfig.esm.json",
    "dev": "tsc -w -p tsconfig.json",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.5.6",
    "react-redux": "^8.0.5",
    "react-router-dom": "~6.3.0",
    "@mui/material": "5.15.0",
    "@tabler/icons-react": "^3.30.0",
    "react-perfect-scrollbar": "^1.5.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "vitest": "^2.1.4"
  }
}
