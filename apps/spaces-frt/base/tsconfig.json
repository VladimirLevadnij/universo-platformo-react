{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "dist/cjs",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["../../../packages/ui/src/*"],
      "@universo/space-builder-frt": ["../../space-builder-frt/base/dist/cjs/index.js"],
      "@universo/auth-frt": ["../../auth-frt/base/dist/index.d.ts"],
      "@universo/auth-frt/*": ["../../auth-frt/base/dist/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/api/**/*.ts",
    "src/i18n/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
