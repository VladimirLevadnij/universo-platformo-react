{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*"
            ],
            "../common/*": [
                "../common/*"
            ],
            "@universo/publish-srv": [
                "../../publish-srv/base/src"
            ],
            "@universo/publish-srv/*": [
                "../../publish-srv/base/src/*"
            ],
            "@universo-platformo/utils": [
                "../../universo-platformo-utils/base/dist/index.d.ts"
            ],
            "@universo/template-mmoomm": [
                "../../template-mmoomm/base/dist/index.d.ts"
            ]
        },
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}